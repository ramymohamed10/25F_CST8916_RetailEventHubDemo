<!-- 
    home.ejs
    ==========
    This is the homepage template for the Retail Store app.
    EJS (Embedded JavaScript) allows mixing HTML with dynamic data from the server.
-->

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Standard metadata for HTML pages -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Page title shown in the browser tab -->
    <title>Home - Retail Store</title>

    <!-- Include Bootstrap CSS (for easy styling and layout) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <!-- 
        Navigation Bar (top menu)
        Uses Bootstrap classes for styling.
    -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <!-- Website logo / brand name -->
            <a class="navbar-brand" href="/">ðŸ›’ Retail Store</a>

            <!-- Collapsible menu for navigation links -->
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto"> <!-- Align menu items to the right -->
                    <!-- 'Home' link - stays active when on the homepage -->
                    <li class="nav-item">
                        <a class="nav-link active" href="/">Home</a>
                    </li>

                    <!-- Link to the products page -->
                    <li class="nav-item">
                        <a class="nav-link" href="/products">Products</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- 
        Main Content Section
        Displayed below the navigation bar.
    -->
    <div class="container mt-5"> <!-- Adds spacing above using Bootstrap's margin-top -->
        <div class="text-center"> <!-- Centers all content -->

            <!-- Main heading -->
            <h1 class="display-4">Welcome to Our Retail Store!</h1>

            <!-- Subheading / description -->
            <p class="lead">Explore our products with real-time event tracking</p>

            <!-- Horizontal line for visual separation -->
            <hr class="my-4">

            <!-- Small informational paragraph -->
            <p>This demo showcases Azure Event Hubs with Node.js</p>

            <!-- Call-to-action button leading to the products page -->
            <a class="btn btn-primary btn-lg" href="/products">Browse Products</a>
        </div>
    </div>

    <!-- 
        Include Bootstrap JavaScript bundle for interactive components 
        (e.g., collapsible navbar, modals, dropdowns)
    -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js">
    </script>
</body>

</html>